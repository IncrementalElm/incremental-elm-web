{
  "name": "elm-static-markup",
  "version": "1.0.0",
  "description": "Static site generator for elm-markup.",
  "scripts": {
    "watch": "elm-static-markup",
    "start": "concurrently \"npm:watch\" \"parcel src/index.html\"",
    "start:prod": "npm run build && http-server ./dist -a localhost -p 3000 --gzip -c31557600",
    "build": "rm -rf dist && parcel build src/index.html --no-content-hash",
    "test": "elm-test",
    "autotest": "elm-test --watch"
  },
  "author": "Dillon Kearns",
  "license": "BSD-3",
  "dependencies": {
    "assets": "^3.0.1",
    "glob": "^7.1.4"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "^12.6.8",
    "codemirror": "^5.48.2",
    "concurrently": "^4.1.1",
    "elm": "^0.19.0-no-deps",
    "elm-hot": "^1.0.1",
    "elm-test": "^0.19.0-rev6",
    "http-server": "^0.11.1",
    "node-elm-compiler": "^5.0.3",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-imagemin": "^3.0.0",
    "parcel-plugin-prerender": "^1.4.1",
    "parcel-plugin-static-files-copy": "^2.1.2",
    "parcel-plugin-sw-precache": "^1.1.1",
    "typescript": "^3.5.3"
  },
  "staticFiles": {
    "staticPath": "public",
    "watcherGlob": "**"
  }
}
